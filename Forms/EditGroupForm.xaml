<Window x:Class="Hamaspik.Forms.EditGroupForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hamaspik.Forms"
        mc:Ignorable="d"
        Title="EditGroupForm" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="300" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Margin="5,0,0,5">Name: </Label>
        <TextBox Name="txtName" Grid.Row="0" MinWidth="250" Margin="68,0,0,300" Grid.RowSpan="2"></TextBox>
        
        <StackPanel Name="spUsers" Margin="10" Grid.Row="1">
            <Label FontWeight="Bold">Users</Label>
            
        </StackPanel>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="15,15,15,15" >
            <Button IsDefault="True" Name="btnDialogSave" Click="btnDialogSave_Click" MinWidth="60" Margin="0,0,10,0">_Save</Button>
            <Button IsCancel="True" MinWidth="60" Click="btnDialogCancel_Click">_Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
